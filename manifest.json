{
  "name": "GoodData Extension Tool BETA",
  "version": "0.9027",
  "icons" : {
    "48" : "guy48_beta.png",
    "96" : "guy96_beta.png",
    "128": "guy128_beta.png",
    "256": "guy256_beta.png"
      
  },  

  "description": "Makes your life easier when developing in GoodData Cloud BI platform",
  "options_page": "options.html",
  "background": {"persistent": false, "scripts": ["GDextension.js"] },

  "page_action" :
  {
    "default_icon" : {
      "19" : "icons/gd19_rebrand_gray_beta.png",
      "38" : "retina/icons/gd19_rebrand_gray_beta.png"
    },
    "default_title" : "Legen...wait for it GoodData is loading...dary!",
    "default_popup" : "gdpopup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["gd_content_script.js"],
      "css":["gd_content.css"]
    },
    {
      "matches": ["https://*/*/log*"],
      "js": ["gd_cc_log_script.js","cc_log_switching.js"],
      "css":["gd_cc_log.css"]
    },
    {
      "matches": [
                  "https://*/gdc/md/*/obj/*",
                  "https://*/gdc/md/*/usedby2/*",
                  "https://*/gdc/md/*/using2/*"
      ],
      "js": ["identifiers.js"]
    }
  ],


  "permissions" : [
    "https://*/*",
    "tabs",
    "storage",
    "notifications",
    
    "contextMenus"
  ],

  "web_accessible_resources": ["cc_log_switching.js","identifiers_inject.js"],

  "manifest_version": 2
}
