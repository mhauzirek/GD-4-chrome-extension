{
  "name": "GoodData Extension Tool",
  "version": "0.9007",
  "icons" : {
    "48" : "guy48.png",
    "96" : "guy96.png",
    "128": "guy128.png",
    "256": "guy256.png"
      
  },  

  "description": "Makes your life easier when developing in GoodData BI platform",
  "options_page": "options.html",
  "background": {"persistent": false, "scripts": ["GDextension.js"] },

  "page_action" :
  {
    "default_icon" : {
      "19" : "icons/gd19_rebrand_gray.png",
      "38" : "retina/icons/gd19_rebrand_gray.png"
    },
    "default_title" : "Legen...wait for it GoodData is loading...dary!",
    "default_popup" : "gdpopup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["gd_content_script.js"],
      "css":["gd_content.css"]
    },
      {
      "matches": ["https://*/*/log*"],
      "js": ["gd_cc_log_script.js"],
      "css":["gd_cc_log.css"]
    },
    {
     "matches": ["https://*/*/obj/*/explain2?*type=oqt_dot*"],
     "js": ["explain.js"]
    }        
  ],


  "permissions" : [
    "https://*/*",
    "tabs",
    "storage",
    "notifications"
    ],
  "web_accessible_resources": ["cc_log_switching.js"],

  "manifest_version": 2
}
